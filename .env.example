# API配置
OPENAI_API_KEY=your_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=qwen3-omni-flash  # 或 gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-v4 # 或 text-embedding-3-small

# 向量数据库配置
VECTOR_DB_PATH=./vector_db
COLLECTION_NAME=Default_KB

# 混合检索配置 (新增)
ENABLE_HYBRID_SEARCH=True
HYBRID_SEARCH_ALPHA=0.5

# 文本处理配置
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIZE_ERROR=100
OVERLAP_ERROR=20
MAX_TOKENS=4096

# RAG & Agent 配置
TOP_K=6
EXERCISE_TOP_K=30          # 新增: 题目生成时的候选池大小
MEMORY_WINDOW_SIZE=10

# 多模态 & 图像理解配置
VL_MODEL_NAME=gpt-4o       # 用于回答带图片的问题
ENABLE_IMAGE_CAPTIONING=False # 新增: 是否开启课件图片自动描述 (消耗Token较多，建议按需开启)
IMAGE_CAPTION_MODEL=gpt-4o # 新增: 用于生成图片描述的模型