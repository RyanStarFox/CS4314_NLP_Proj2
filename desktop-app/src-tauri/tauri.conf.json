{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vulpis",
  "identifier": "com.cs4314.vulpis",
  "version": "0.0.1",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vulpis",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' http://127.0.0.1:* https://*.openai.com https://*.aliyuncs.com https://*.bigmodel.cn",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob: http://127.0.0.1:*",
        "frame-src": "http://127.0.0.1:*"
      }
    }
  },
  "bundle": {
    "active": true,
    "category": "Education",
    "copyright": "Â© 2025 CS4314 Project Team",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "externalBin": [],
    "resources": ["../python-dist/**/*"],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "targets": ["nsis"],
      "nsis": {
        "installMode": "currentUser",
        "languages": ["SimpChinese", "English"]
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
